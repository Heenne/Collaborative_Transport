<launch>
    <arg name="miranda_root_package" default="miranda_hardware_helper"/>

     <node   name="reconfigure_load_stiffness_ic" pkg="dynamic_reconfigure" type="dynparam" 
            args="load /miranda/panda/cartesian_impedance_controller $(find transport_launcher)/config/impedance_dyn.yaml" />
     <!--    Launch the robot hardware
            Access move base server
            Sate controlle for the knowledge of current manipulator state
            Cartesian controller for motion command
    -->
    <include file="$(eval find( arg('miranda_root_package'))+'/launch/miranda.launch')">
        <arg name="controllers_started" value="franka_state_controller cartesian_impedance_controller"/>
    </include>

    <!-- 
        Start the orientation feed forward with given config file
     -->
    <node name="orientation_ff" type="feed_forward_tf_node" pkg="multi_robot_controller" ns="miranda/panda">
        <rosparam command="load" file="$(find transport_launcher)/config/miranda_orientation_ff_test.yaml"/>
    </node>

</launch>